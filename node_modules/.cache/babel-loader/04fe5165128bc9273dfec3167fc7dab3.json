onse);\n          let comment = {\n            id: response.id,\n            author_name: \"fdizes\",\n            content: this.tempComment_content,\n            date: new Date().toLocaleString(\"en-US\", {\n              timeZone: \"Europe/Paris\"\n            })\n          };\n          this.comments.unshift(comment);\n          console.log(new Date().toLocaleString(\"en-US\", {\n            timeZone: \"Europe/Paris\"\n          }));\n          this.tempComment_content = \"\";\n        });\n      }\n    },\n\n    deleteCommentPost(comment_id) {\n      this.comments = this.comments.filter(comment => comment.id != comment_id);\n    }\n\n  },\n\n  mounted() {\n    const WPAPI = require(\"wpapi\");\n\n    console.log(this.post_id);\n    const wp = new WPAPI({\n      endpoint: \"http://localhost/wordpress/index.php/wp-json/\",\n      username: \"fdizes\",\n      password: \"azerty\"\n    });\n    let comments = [];\n    wp.comments().post(this.post_id).perPage(100).get().then(data => {\n      console.log(data);\n      data.forEach(d => {\n        comments.push({\n          id: d.id,\n          author_name: d.author_name,\n          content: d.content.rendered.replace(/(<([^>]+)>)/gi, \"\"),\n          date: d.date\n        });\n      });\n      this.comments = comments;\n    });\n  }\n\n};","map":{"version":3,"mappings":"AACA,OAAOA,WAAP,MAAwB,8BAAxB;AAEA,eAAe;AACbC,MAAI,EAAE,cADO;AAEbC,YAAU,EAAE;AAAEF;AAAF,GAFC;AAGbG,OAAK,EAAE,CACL,kBADK,EAEL,oBAFK,EAGL,SAHK,EAIL,OAJK,EAKL,SALK,EAML,WANK,CAHM;;AAWbC,MAAI,GAAG;AACL,WAAO;AACLC,eAAS,EAAE,KAAKC,KADX;AAELC,iBAAW,EAAE,KAAKC,OAFb;AAGLC,cAAQ,EAAE,EAHL;AAILC,kBAAY,EAAE,KAJT;AAKLC,yBAAmB,EAAE;AALhB,KAAP;AAOD,GAnBY;;AAoBbC,MAAI,EAAE,CAAC,uBAAD,CApBO;AAqBbC,SAAO,EAAE;AACPC,kBAAc,GAAG;AACf,WAAKJ,YAAL,GAAoB,CAAC,KAAKA,YAA1B;AACD,KAHM;;AAIPK,mBAAe,GAAG;AAChB,YAAMC,KAAI,GAAIC,OAAO,CAAC,OAAD,CAArB;;AACAC,aAAO,CAACC,GAAR,CAAY,KAAKC,OAAjB;AAEA,YAAMC,EAAC,GAAI,IAAIL,KAAJ,CAAU;AACnBM,gBAAQ,EAAE,+CADS;AAEnBC,gBAAQ,EAAE,QAFS;AAGnBC,gBAAQ,EA