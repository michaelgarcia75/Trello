n  },\n\n  mounted() {\n    const WPAPI = require(\"wpapi\");\n\n    console.log(this.post_id);\n    const wp = new WPAPI({\n      endpoint: \"http://localhost/wordpress/index.php/wp-json/\",\n      username: \"fdizes\",\n      password: \"azerty\"\n    });\n    let comments = [];\n    wp.comments().post(this.post_id).get().then(data => {\n      console.log(data);\n      data.forEach(d => {\n        comments.push({\n          id: d.id,\n          author_name: d.author_name,\n          content: d.content.rendered.replace(/(<([^>]+)>)/gi, \"\"),\n          date: d.date\n        });\n      });\n      this.comments = comments;\n    });\n  }\n\n};","map":{"version":3,"mappings":"AACA,OAAOA,WAAP,MAAwB,8BAAxB;AAEA,eAAe;AACbC,MAAI,EAAE,cADO;AAEbC,YAAU,EAAE;AAAEF;AAAF,GAFC;AAGbG,OAAK,EAAE,CACL,kBADK,EAEL,oBAFK,EAGL,SAHK,EAIL,OAJK,EAKL,SALK,EAML,WANK,CAHM;AAWbC,OAAK,EAAE,EAXM;;AAYbC,MAAI,GAAG;AACL,WAAO;AACLC,eAAS,EAAE,KAAKC,KADX;AAELC,iBAAW,EAAE,KAAKC,OAFb;AAGLC,cAAQ,EAAE,EAHL;AAILC,kBAAY,EAAE,KAJT;AAKLC,yBAAmB,EAAE;AALhB,KAAP;AAOD,GApBY;;AAqBbC,SAAO,EAAE;AACPC,kBAAc,GAAG;AACf,WAAKH,YAAL,GAAoB,CAAC,KAAKA,YAA1B;AACD,KAHM;;AAIPI,mBAAe,GAAG;AAChB,YAAMC,KAAI,GAAIC,OAAO,CAAC,OAAD,CAArB;;AACAC,aAAO,CAACC,GAAR,CAAY,KAAKC,OAAjB;AAEA,YAAMC,EAAC,GAAI,IAAIL,KAAJ,CAAU;AACnBM,gBAAQ,EAAE,+CADS;AAEnBC,gBAAQ,EAAE,QAFS;AAGnBC,gBAAQ,EAAE;AAHS,OAAV,CAAX;AAKAH,QAAE,CAACI,KAAH,GACGC,EADH,CACM,KAAKN,OADX,EAEGO,MAFH,CAEU;AACNpB,aAAK,EAAE,KAAKD;AADN,OAFV,EAKGsB,IALH,CAKQ,UAAUC,QAAV,EAAoB;AACxBX,eAAO,CAACC,GAAR,CAAYU,QAAZ;AACD,OAPH;AAQD,KArBM;;AAsBPC,qBAAiB,GAAG;AAClB,YAAMd,KAAI,GAAIC,OAAO,CAAC,OAAD,CAArB;;AACAC,aAAO,CAACC,GAAR,CAAY,KAAKC,OAAjB;AAEA,YAAMC,EAAC,GAAI,IAAIL,KAAJ,CAAU;AACnBM,gBAAQ,EAAE,+CADS;AAEnBC,gBAAQ,EAAE,QAFS;AAGnBC,gBAAQ,EAAE;AAHS,OAAV,CAAX;AAKAH,QAAE,CAACI,KAAH,GACGC,EADH,CACM,KAAKN,OADX,EAEGO,MAFH,CAEU;AACNlB,eAAO,EAAE,KAAKD;AADR,OAFV,EAKGoB,IALH,CAKQ,UAAUC,QAAV,EAAoB;AACxBX,eAAO,CAACC,GAAR,CAAYU,QAAZ;AACD,OAPH;AAQD,KAvCM;;AAwCPE,iBAAa,GAAG;AACd,UAAI,KAAKnB,mBAAL,KAA6B,EAAjC,EAAq